<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.group.survey.AddSurvey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_bs_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/orange">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/back_arrow"
           />
        <TextView
            android:id="@+id/tvPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/urbanist_regular"
            android:text="Add Survey"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />




    </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:fontFamily="@font/urbanist_semibold"
               android:padding="@dimen/_10sdp"
               android:text="Survey Title"
               android:textSize="@dimen/_16sdp"/>

           <EditText
               android:id="@+id/titleTxt"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_10sdp"
               android:padding="@dimen/_10sdp"
               android:background="@drawable/white_bg"
               android:hint="EX: Market Research"
               android:textColorHint="@color/grey_font"
               android:fontFamily="@font/urbanist_light"
               android:textSize="@dimen/_14sdp"
               android:textColor="@color/black"
               android:maxLines="1"
               android:maxLength="20"
               android:imeOptions="actionNext"/>

       </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/urbanist_semibold"
                android:padding="@dimen/_10sdp"
                android:text="Survey Description (Optional)"
                android:textSize="@dimen/_16sdp"/>

            <EditText
                android:id="@+id/DesctiptionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/white_bg"
                android:hint="What is the survey about?"
                android:textColorHint="@color/grey_font"
                android:fontFamily="@font/urbanist_light"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:maxLines="1"
                android:maxLength="50"
                android:imeOptions="actionDone"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_bg"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="Next"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/urbanist_semibold"/>

</RelativeLayout>